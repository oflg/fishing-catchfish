title: $:/plugins/oflg/fishing-catchfish/buttons/editortoolbar/setword
list-after: $:/plugins/oflg/fishing-catchfish/buttons/editortoolbar/setselect
tags: $:/tags/EditorToolbar
icon: $:/plugins/oflg/fishing-catchfish/icons/setword
caption: {{$:/language/fishing-catchfish/setword}}
description: {{$:/language/fishing-catchfish/setwordtip}}
condition: [<targetTiddler>]
shortcuts: ((fishing-setword))

\define tv-action-refresh-policy() always

<$action-sendmessage
    $message="tm-edit-text-operation"
    $param="save-selection"
    tiddler="$:/temp/fishing"
    field="save-selection"
/>

<$list
    filter="[<targetTiddler>]"
>
    <$navigator
        story="$:/StoryList"
        history="$:/HistoryList"
        relinkOnRename="yes"
    >
        <$fieldmangler>
            <$action-sendmessage
                $message="tm-add-tag"
                $param="?"
            />
            <$action-setfield
                $tiddler=<<targetTiddler>>
                draft.title={{{ [{$:/temp/fishing!!save-selection}search-replace:g:regexp[\n],[<br>]!is[blank]] ~[<targetTiddler>get[draft.title]] }}}
                caption="{{||Word}}"
            />
        </$fieldmangler>
    </$navigator>
</$list>